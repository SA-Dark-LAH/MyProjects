# Name of the library
NAME = libftprintf.a

# Source files
SRC = ft_printf.c ft_flags.c ft_specifiers.c ft_helpers.c hex_number.c print_ptr.c


OBJS = $(SRC:.c=.o)

CC = gcc
CFLAGS = -Wall -Werror -Wextra
RM = rm -rf
AR = ar crs

$(NAME): $(OBJS)
	$(AR) $(NAME) $(OBJS)

all: $(NAME)

clean:
	$(RM) $(OBJS)

fclean:	clean
	$(RM) $(NAME)		

re:	fclean all

.PHONY:	all clean fclean re